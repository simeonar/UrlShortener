# EditorConfig helps maintain consistent coding styles for all developers
# Documentation: https://editorconfig.org/

root = true

# C# files
[*.cs]
indent_style = space
indent_size = 4
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

# Use file-scoped namespaces
csharp_style_namespace_declarations = file_scoped:suggestion

# Require 'var' when type is apparent
csharp_style_var_when_type_is_apparent = true:suggestion

# Require explicit type when type is not apparent
csharp_style_var_elsewhere = false:suggestion

# Prefer expression-bodied members
csharp_style_expression_bodied_methods = true:suggestion
csharp_style_expression_bodied_properties = true:suggestion

# Prefer using directives inside namespaces
dotnet_sort_system_directives_first = true

# Naming conventions
# (You can expand this section as needed)

# JSON, Markdown, YAML, etc.
[*.{json,md,yml,yaml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
